<!doctype html>
<html>
<head>
    <title>Mot de passe oublié</title>
    <% include ./partials/header %>
</head>
<body class="cms-index-index cms-home-page">
        <div id="page"> 
            <!-- Header -->
            <header>
                <% include ./partials/topBar %>
            </header>

            
        <section class="main-container top-space col1-layout">
                <div class="main container">
                    <div class="account-login">
                    <div class="page-title">
                        <h2>Inscription</h2>
                    </div>
                    <fieldset class="col2-set">
                        <div class="col-1 registered-users"><strong>Réinitialiser son mot de passe</strong>
                            <div class="content">
                                <% if (msgError.length > 0) { %>
                                <div class="alert alert-danger"> <%= msgError %> </div>
                                <% } %>
                                <% if (msgSuccess.length > 0) { %>
                                <div class="alert alert-success"> <%= msgSuccess %> </div>
                                <% } %>      
                            </div>
                            <p>Pour réinitialiser votre mot de passe, merci de saisir votre adresse mail</p>
                            <form action="/login/resetPassword" method="post">
                                <ul class="form-list">
                                    <li>
                                        <label for="login">Email</label>
                                        <br>
                                        <input type="text" title="mail" class="input-text required-entry" id="mail" value="" name="mail" required>
                                    </li>
                                </ul>
                                <button id="send2" name="send" type="submit" class="button login"><span>Renvoyer</span></button>
                            </form>
                        </div>
                    </fieldset>
                    </div>
                </div>
        </section>
        <% include ./partials/footer %>
    </div>

</body>
</html>
    function addCart(){
      var qte=document.getElementById("qty").value;
      if(qte<1 || qte > <%= item.infoItem.quantity %>) {
          alert("La quantité voulu doit être suppérieur à 0 et inférieur à <%= item.infoItem.quantity %>");
      }else{
          var url = document.URL.split('/');

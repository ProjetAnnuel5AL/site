          /*on envoi aussi la qtemax possible à  l'achat dans le cas ou produit déjà dans panier pour vérif*/
          $.getJSON("/cart/add", { id: id, qte:qte, qteMax : <%= item.infoItem.quantity %>, unit : "<%= item.infoItem.unitName %>", category : "<%=item.infoItem.categoryName%>", product: "<%=item.infoItem.productName%>", title:"<%=item.infoItem.itemName%>", prixU : <%=item.infoItem.price%>,ext: '<%=ext%>' }).done(function( json ) {
